# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

# Gets an specific recipe
GET     /recipes                    controllers.RecipeController.index()
GET     /recipes/create             controllers.RecipeController.create()
GET     /recipes/:id                controllers.RecipeController.retrieve(id: Integer)
GET     /recipes/edit/:id           controllers.RecipeController.edit(id: Integer)
POST    /recipes/edit               controllers.RecipeController.update()
POST    /recipes/create             controllers.RecipeController.save()
GET     /recipes/delete/:id         controllers.RecipeController.destroy(id: Integer)

# Shows about information of luncho's website
GET     /about                      controllers.HomeController.about